<!DOCTYPE html>
<html>
  <head>
    <title>Slated</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Bootstrap core CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/css/grayscale.min.css" rel="stylesheet">
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <% if current_concierge %>
            <li class="nav-item">
              <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                  Concierge Functions
                </button>
                <ul class="dropdown-menu">
                  <li><%= link_to "Appointment Index", appointments_path %></li>
                  <li><%= link_to 'Create Appointment', new_appointment_path %></li>
                  <li><%= link_to 'View Available Services', services_path %></li>
                  <li><%= link_to 'Edit Concierge Account', edit_concierge_path(current_concierge) %></li>
                  <li><%= link_to 'Sign Out', signout_path, method: :post %></li>
                </ul>
              </div>
            </li>
            <% if current_concierge.admin == true %>
              <li class="nav-item">
                <div class="dropdown">
                  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Admin Functions
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Add a Stylist", new_stylist_path %></li>
                    <li><%= link_to "Add a Service", new_service_path %></li>
                    <li><%= link_to "View all Concierges", concierges_path %></li>
                  </ul>
                </div>
              </li>
            <% end %>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign Up", signup_path, class: "nav-link js-scroll-trigger" %> 
            </li>
            <li class="nav-item">
              <%= link_to "Sign In", signin_path, class: "nav-link js-scroll-trigger" %>
            </li>
            <li class="nav-item">
              <%= link_to "Google Sign In", "/auth/google_oauth2", class: "nav-link js-scroll-trigger" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>

    <!-- Footer -->
    <footer class="bg-black small text-center text-white-50">
      <div class="container">
        Copyright &copy; SLATED 2019
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/jquery/jquery.min.js"></script>
    <script src="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="http://blackrockdigital.github.io/startbootstrap-grayscale/js/grayscale.min.js"></script>

  </body>
</html>
